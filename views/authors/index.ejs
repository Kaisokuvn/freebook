<h2>Search Author</h2>
<form action="/authors" method="GET">
  <div>
    <label for="author">Name</label>
    <input type="text" name="name" id="author" value="<%= searchOption.name %>" />
  </div>
  <button type="submit">Search</button>
</form>


<div>
  <% authors.forEach(author => { %>
  <div><%= author.name %></div>
  <% }) %>
</div>
