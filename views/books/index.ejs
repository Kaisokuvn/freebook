<h2>Search Author</h2>
<form action="/books" method="GET">
  <div>
    <label for="title">Title</label>
    <input
      type="text"
      name="title"
      id="author"
      value="<%= searchOption.title %>"
    />
  </div>
  <div>
    <label for="publishedafter">Published After</label>
    <input
      type="date"
      name="publishedAfter"
      id="publishedAfter"
      value="<%= searchOption.publishedAfter %> "
    />
  </div>
  <div>
    <label for="publishedafter">Published Before</label>
    <input
      type="date"
      name="publishedBefore"
      id="publishedBefore"
      value="<%= searchOption.publishedBefore %> "
    />
  </div>
  <div>
    <label for="publishedafter">By Author</label>
    <select name="author">
      <% authors.forEach(author => { %>
      <option label="<%= author.name %> " value="<%= author.id %> "></option>
      <% }) %>
    </select>
  </div>

  <for>
    
  </for>
  <button type="submit">Search</button>
</form>

<div>
  <% books.forEach(book => { %>
   <div><img height="150" width="100" src="<%= book.coverImagePath %>" alt="bookcorver"/></div>
  <% }) %>
</div>
